{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "files": [],
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/adapter-mock" },
    { "path": "./packages/adapter-python" },
    { "path": "./packages/adapter-javascript" },
    { "path": "./packages/adapter-rust" },
    { "path": "./packages/adapter-zig" },
    { "path": "./packages/mcp-debugger" },
    { "path": "./tsconfig.src.json" }
  ]
}
